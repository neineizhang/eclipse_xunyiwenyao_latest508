<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="50dip"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/template_item_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="药品名称" />

    <com.zll.xunyiwenyao.view.PrescriptionTemplateScrollView
        android:id="@+id/template_item_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/template_item_data1"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center" />

            <TextView
                android:id="@+id/template_item_data2"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center" />

            <EditText
                android:id="@+id/template_item_data3"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center" />

            <TextView
                android:id="@+id/template_item_data4"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#111" />

            <EditText
                android:id="@+id/template_item_data5"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center" />
        </LinearLayout>
    </com.zll.xunyiwenyao.view.PrescriptionTemplateScrollView>

</LinearLayout>